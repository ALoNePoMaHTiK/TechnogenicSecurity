<Window x:Class="TechnogenicSecurity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechnogenicSecurity"
        xmlns:uc="clr-namespace:TechnogenicSecurity.Views"
        mc:Ignorable="d"
        xmlns:vm ="clr-namespace:TechnogenicSecurity.ViewModels" 
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Расчет пожара пролива">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <TabControl>
        <TabItem>
            <TabItem.Header>
                Расчет пожара пролива
            </TabItem.Header>
            <TabItem.Content>
                <uc:StraitFireCalculation DataContext="{Binding straitFireCalculationViewModel}">

                </uc:StraitFireCalculation>
            </TabItem.Content>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                Расчет взрыва
            </TabItem.Header>
            <TabItem.Content>
                <uc:ExplosionCalculation DataContext="{Binding explosionCalculationViewModel}">

                </uc:ExplosionCalculation>
            </TabItem.Content>
        </TabItem>
    </TabControl>
        
</Window>
